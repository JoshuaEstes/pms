# To enable PHP version info in your shell prompt, please set PHPBREW_SET_PROMPT=1
# in your `~/.bashrc` before you source `~/.phpbrew/bashrc`
export PHPBREW_SET_PROMPT=0

# To enable .phpbrewrc file searching, please export the following variable:
export PHPBREW_RC_ENABLE=1

# Set to 1 to allow phpbrew to update when pms is upgraded
PMS_PHPBREW_SELFUPDATE=0

# Set to 1 to allow phpbrew to update know versions of php
PMS_PHPBREW_UPDATE=0
