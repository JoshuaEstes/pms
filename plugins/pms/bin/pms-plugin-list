#!/usr/bin/env sh
# pms plugin list
# @todo Show which ones are installed
# @todo show installed ones first
if [ "$PMS_DEBUG" -eq "1" ]; then
  echo "[DEBUG] PMS:                $PMS"
  echo "[DEBUG] PMS_LOCAL:          $PMS_LOCAL"
  echo "[DEBUG] PMS_DEBUG:          $PMS_DEBUG"
  echo "[DEBUG] PMS_NO_INTERACTION: $PMS_SHELL"
  echo "[DEBUG] PMS_REPO:           $PMS_REPO"
  echo "[DEBUG] PMS_REMOTE:         $PMS_REMOTE"
  echo "[DEBUG] PMS_BRANCH:         $PMS_BRANCH"
  echo "[DEBUG] PMS_THEME:          $PMS_THEME"
  echo "[DEBUG] PMS_PLUGINS:        ${PMS_PLUGINS[*]}"
  echo "[DEBUG] PMS_SHELL:          $PMS_SHELL"
  echo "[DEBUG] @:                  $@"
  echo "[DEBUG] 0:                  $0"
  echo "[DEBUG] 1:                  $1"
  echo "[DEBUG] 2:                  $2"
  echo "[DEBUG] 3:                  $3"
fi
echo
echo "Core Plugins:"
for plugin in $PMS/plugins/*; do
  plugin=${plugin%*/}
  echo "  ${plugin##*/}"
done
echo
echo "Local Plugins:"
for plugin in $PMS_LOCAL/plugins/*; do
  plugin=${plugin%*/}
  echo "  ${plugin##*/}"
done
echo
echo "Enabled Plugins:"
for plugin in "${PMS_PLUGINS[@]}"; do
  plugin=${plugin%*/}
  echo "  ${plugin##*/}"
done
echo
